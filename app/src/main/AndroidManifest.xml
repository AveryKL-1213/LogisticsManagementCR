<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.logisticsmanagementcr.android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".LogisticsManagementApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LogisticsManagementCR">
        <activity
            android:name=".CompanyWayBillJSONActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CompanyWayBillXMLActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NativeWayBillActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoggedActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EnterWayBillActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>